<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/accountCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/ibanTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IBAN: "
            android:textColor="@color/independence"
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/balanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ibanTextView"
            android:layout_marginTop="18dp"
            android:text="Balance: "
            android:textColor="@color/independence"
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/ibanTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/ibanTextView"
            android:paddingLeft="6dp"
            android:text="2349827382439842398742398"
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/balanceTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ibanTextView"
            android:layout_marginTop="22dp"
            android:layout_toEndOf="@+id/balanceTextView"
            android:text="250,6 HRK"
            android:textSize="16sp">

        </TextView>

        <ImageView
            android:id="@+id/arrowImageView"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"></ImageView>

    </RelativeLayout>
</androidx.cardview.widget.CardView>