<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/registerHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_gravity="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/independence"
        android:text="Register" />

    <EditText
        android:id="@+id/registerFirstNameTxt"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:hint="First Name"
        android:backgroundTint="@color/independence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/registerLastNameTxt"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:hint="Last name"
        android:backgroundTint="@color/independence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/confirmRegisterButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/custom_button_corners"
        android:text="Confirm" />


</LinearLayout>